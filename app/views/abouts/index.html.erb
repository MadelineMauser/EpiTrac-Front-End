<div id='diseases'>
  <h2 style="text-align:center">Diseases Surveilled</h2>
  <div class="row">
    <div class="column">
      <% @diseases.each do |disease_info| %>
        <div class="card">
          <div class="container">
            <h2><%= disease_info.disease %></h2>
            <p class="title"><%= disease_info.short_name %></p>
            <p><%= disease_info.information %></p>
            <p><a href=<%= disease_info.link %> class="button" role="button">More Info</a></p>
            <p><a href=<%= articles_path(params: {disease: disease_info.short_name})  %> class="button" role="button">Find <%=disease_info.short_name%> Articles</a></p>

          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>