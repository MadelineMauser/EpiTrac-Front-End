<h2 style="text-align:center"><%= @user.name %> Dashboard</h2>
<hr>
<br>
<h3>User Information</h3>
<div class="row">
  <div class="column">
    <div class="card">
      <div class="container" align="center">
        <h4><%= @user.name %></h4>
        <p class="title"><%= @user.email %></p>
        <p class="title"><%= @user.state if @user.state %></p>
        <p><a href="/dashboard/edit" class="button" role="button">Update Your State</a></p>
      </div>
    </div>
  </div>
</div>
<br>
<hr>

<div id='articles'>
  <h2 style="text-align:left">Saved Articles</h2>
  <p style="text-align:left">Total Number of Saved Articles: </strong><%=@saved_articles.count%></p>
  <div class="row">
    <div class="column">
      <% @saved_articles.each do |article| %>
        <div class="card" id=<%=article.isbn_issn%>>
          <div class="container"><br>
            <h3><%= article.title %></h3>
              <p><strong>Authors: </strong><%=article.author%></p>
              <p><strong>Publication Date: </strong><%=article.date%>, <%=article.year%></p>
              <p><strong>DOI: </strong><%=article.doi%></p>
              <p><strong>ISBN_ISSN: </strong><%=article.isbn_issn%></p>
              <p><strong>Journal: </strong><%=article.journal%></p>
              <p><strong>URL: </strong><a href=<%= article.url %>><%=article.url%></a></p>
              <p><strong>Abstract: </strong><%=article.abstract%></p>
              <%=button_to "Delete Article From Dashboard", "/user_articles/#{article.id}", method: :delete%><br>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>

<footer class="page-footer font-small special-color-dark pt-4">
  <br>
  <hr>
  <p align="center">This action cannot be undone. Please be sure you want to delete your account.
  <p align="center"><%= link_to "Delete Account", "/dashboard", method: :delete %><p><br>
</footer>
